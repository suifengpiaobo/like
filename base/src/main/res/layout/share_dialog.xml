<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_gravity="bottom"
              android:background="@color/white"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="分享至"
        android:textColor="@color/color_1F2427"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:paddingBottom="20dp"
        >
        <LinearLayout
            android:id="@+id/share_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share_weixin"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="微信"
                android:textColor="@color/color_82879A"
                android:textSize="14sp"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_weixin_friends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share_weixin_friends"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="朋友圈"
                android:textColor="@color/color_82879A"
                android:textSize="14sp"
                android:gravity="center"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_weixin_collect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/share_weixin_collection"
                />
            <!--android:background="@drawable/share_weixin_collect_selector"-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="微信收藏"
                android:textColor="@color/color_82879A"
                android:textSize="14sp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
