    <RelativeLayout
        android:id="@+id/mine_picture"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="17dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/water_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/picture_icon"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/water_icon"
            android:text="关闭图片水印"
            android:textSize="16sp"
            android:textColor="@color/Gray"
            android:layout_centerVertical="true"
            />

        <ToggleButton
            android:id="@+id/close_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="-30dp"
            android:layout_marginRight="16dp"
            android:background="@android:color/transparent"
            android:button="@drawable/btn_moveplan_switch"
            android:checked="false"
            android:textOff=""
            android:textOn=""
            android:visibility="visible"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/mine_about"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/about_icon"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于我们"
            android:textSize="16sp"
            android:textColor="@color/Gray"
            android:layout_centerVertical="true"
            />
    </LinearLayout>

</LinearLayout>
